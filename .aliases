#useful commands
alias s="sudo"
alias su="sudo -u"
alias va="vim /home/holic/.aliases"
alias sb="source /home/holic/.bashrc"

# git stuff
alias ga="git add"
alias gaa="git add ."
alias gc="git commit"
alias gcm="git commit -m"
alias gs="git status"
alias gl='git log --graph --pretty=format:'\''%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'\'' --abbrev-commit'
alias gco="git checkout"
alias gp="git pull origin"
alias gpp="git push origin"
alias gff="git log --diff-filter=A --"
alias ghf="git log -p --"
alias gm="git merge"
alias gr="git rebase"
alias gri="git rebase --interactive"
alias gb="git branch"
alias gd="git diff"
alias grh="git reset --hard"
alias grs="git reset --soft"
alias gref="git reflog"
alias gi="git init"
alias gcl="git clone"
alias gst="git stash"

# laravel
alias a="php artisan"
alias as="php artisan serve"
alias ac="php artisan make:controller"
alias am="php artisan make:model"
alias amm="php artisan make:model --migration"
alias adr="php artisan migrate:refresh --seed"
alias adm="php artisan migrate"
alias tinker="php artisan tinker"

# composer
alias c="composer"
alias ca="composer dump-autoload"
alias cu="composer self-upgrade"
alias ci="composer install"
alias cr="composer require"

# ssh
alias sjl="ssh -i /home/holic/keys/jumpittlabs/jumpittlabs.pem ubuntu@jumpittlabs.cl"

# clean semaphores
alias clean_semaphores="for i in `ipcs -s | awk '/httpd/ {print $2}'`; do (ipcrm -s $i); done"

# Aptitude
alias install="sudo aptitude install"
alias update="sudo aptitude update && sudo aptitude safe-upgrade"
alias search="sudo aptitude search"

# Apache
alias log="sudo tail"
